# School Management Platform Environment Variables
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/school_management

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Service URLs
FRONTEND_URL=http://localhost:3000
API_GATEWAY_URL=http://localhost:4000
USER_SERVICE_URL=http://localhost:4001
ACADEMIC_SERVICE_URL=http://localhost:4002

# Node Environment
NODE_ENV=development

# Ports
API_GATEWAY_PORT=4000
USER_SERVICE_PORT=4001
ACADEMIC_SERVICE_PORT=4002
FRONTEND_PORT=3000

# Database Configuration for Services
USER_SERVICE_DB_URL=postgresql://postgres:postgres123@localhost:5432/school_management
ACADEMIC_SERVICE_DB_URL=postgresql://postgres:postgres123@localhost:5432/school_management

# Production Database (Update for production)
PROD_DATABASE_URL=postgresql://username:password@your-db-host:5432/school_management_prod

# Docker Configuration
POSTGRES_DB=school_management
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
